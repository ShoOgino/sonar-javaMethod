    assertThat(getCoreModuleMeasure("comment_lines").getIntValue()).isEqualTo(7605);

    int expected_public_api = 2846 - 208 - 15;
    assertThat(getProjectMeasure("public_api").getIntValue()).isEqualTo(expected_public_api);
  }

