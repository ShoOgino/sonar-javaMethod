    assertThat(getMeasureAsDouble(JavaTestSuite.keyFor(PROJECT, "complexity", ""), "function_complexity")).isEqualTo(1.3);
    assertThat(getMeasureAsDouble(PROJECT, "function_complexity")).isEqualTo(1.3);
  }

