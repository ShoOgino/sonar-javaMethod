  @Test
  public void lineAndColumnAt() {
    assertLineAndColumn(
      "", 0,
      1, 1);

    assertLineAndColumn(
      "abc", 0,
      1, 1);

    assertLineAndColumn(
      "abc", 1,
      1, 2);

    assertLineAndColumn(
      "abc", 2,
      1, 3);

    assertLineAndColumn(
      "\n_", 1,
      2, 1);

    assertLineAndColumn(
      "\r_", 1,
      2, 1);

    assertLineAndColumn(
      "\r\n_", 2,
      2, 1);

    assertLineAndColumn(
      "\r", 1,
      2, 1);
  }

