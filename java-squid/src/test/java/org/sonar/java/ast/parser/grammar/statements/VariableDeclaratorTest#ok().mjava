  @Test
  public void ok() {
    LexerlessGrammarBuilder b = JavaGrammar.createGrammarBuilder();

    assertThat(b, JavaGrammar.VARIABLE_DECLARATOR)
      .matches("identifier [] [] = 0")
      .matches("identifier [] []")
      .matches("identifier [] = {}")
      .matches("identifier []")
      .matches("identifier = 0")
      .matches("identifier");
  }

