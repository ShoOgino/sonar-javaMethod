  public String formFullName(String name, Symbol site) {
    String result = name;
    Symbol owner = site;
    while(owner!=symbols.defaultPackage) {
      //Handle inner classes, if owner is a type, separate by $
      String separator = ".";
      if(owner.kind == Symbol.TYP) {
        separator = "$";
      }
      result = owner.name +separator+ result;
      owner = owner.owner();
    }
    return result;
  }

