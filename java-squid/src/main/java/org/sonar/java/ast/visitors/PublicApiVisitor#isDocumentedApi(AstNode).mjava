  public static boolean isDocumentedApi(AstNode astNode) {
    AstNode declaration = getDeclaration(astNode);
    for (Trivia trivia : declaration.getToken().getTrivia()) {
      if (trivia.isComment()) {
        String value = trivia.getToken().getOriginalValue();
        if (value.startsWith("/**")) {
          return true;
        }
      }
    }
    return false;
  }

