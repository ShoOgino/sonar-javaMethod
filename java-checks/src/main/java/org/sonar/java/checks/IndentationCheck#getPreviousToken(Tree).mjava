  private static SyntaxToken getPreviousToken(Tree tree) {
    Tree previous = null;
    for (Tree children : ((JavaTree) tree.parent()).getChildren()) {
      if (children.equals(tree)) {
        break;
      }
      previous = children;
    }
    if(previous == null) {
      return getPreviousToken(tree.parent());
    }
    return previous.lastToken();
  }

