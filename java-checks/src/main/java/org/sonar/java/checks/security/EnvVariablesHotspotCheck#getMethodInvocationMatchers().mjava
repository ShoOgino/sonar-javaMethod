  @Override
  protected MethodMatchers getMethodInvocationMatchers() {
    return MethodMatchers.or(
      MethodMatchers.create()
        .ofTypes("java.lang.System")
        .names("getenv")
        .withAnyParameters()
        .build(),
      MethodMatchers.create()
        .ofTypes("java.lang.ProcessBuilder")
        .names("environment")
        .addWithoutParametersMatcher()
        .build(),
      RUNTIME_EXEC);
  }

