  private boolean extendsThrowable(Type.ClassType type) {
    Symbol.TypeSymbol site = type.getSymbol();
    if (isThrowable(site)) {
      return true;
    }
    while (site.getSuperclass() != null) {
      site = ((Type.ClassType) site.getSuperclass()).getSymbol();
      if (isThrowable(site)) {
        return true;
      }
    }
    return false;
  }

