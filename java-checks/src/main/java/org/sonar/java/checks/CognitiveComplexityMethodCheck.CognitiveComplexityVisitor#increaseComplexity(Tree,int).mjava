    private void increaseComplexity(Tree tree, int increase) {
      complexity += increase;
      if(!ignored.contains(tree)) {
        String message = "+" + increase;
        if (nesting > 1) {
          message += " (incl " + (nesting - 1) + " for nesting)";
        }
        flow.add(new JavaFileScannerContext.Location(message, tree));
      }
    }

