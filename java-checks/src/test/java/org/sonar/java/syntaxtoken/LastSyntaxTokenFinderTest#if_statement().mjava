  @Test
  public void if_statement() {
    String p =
      "class Foo {"
        + "  void foo(boolean test) {"
        + "    if (test) { }"
        + "  }"
        + "}";
    assertFirstStatementlastTokenValue(p, "}");

    p =
      "class Foo {"
        + "  void foo(boolean test) {"
        + "    if (test) { }"
        + "    else { }"
        + "  }"
        + "}";
    assertFirstStatementlastTokenValue(p, "}");
  }

