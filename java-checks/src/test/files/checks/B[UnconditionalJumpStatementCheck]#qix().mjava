  void qix() throws Exception {
    while(foo()) {
      bar();
      if (baz()) {
        break;
      }
    }

    while(foo()) {
      bar();
      break; // Noncompliant
    }

    while(foo()) {
      bar();
      continue; // Noncompliant
    }

    while(foo()) {
      bar();
      throw new Exception(); // Noncompliant
    }
  }

