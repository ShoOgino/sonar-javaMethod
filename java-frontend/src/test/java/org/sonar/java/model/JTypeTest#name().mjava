  @Test
  void name() {
    assertAll(
      () ->
        assertThat(type("int").name())
          .isEqualTo("int"),
      () ->
        assertThat(type("int[][]").name())
          .isEqualTo("int[][]"),
      () ->
        assertThat(type("java.util.Map").name())
          .isEqualTo("Map"),
      () ->
        assertThat(type("java.util.Map[][]").name())
          .isEqualTo("Map[][]"),
      () ->
        assertThat(type("java.util.Map$Entry").name())
          .isEqualTo("Entry"),
      () ->
        assertThat(type("java.util.Map$Entry[][]").name())
          .isEqualTo("Entry[][]")
    );
  }

