  @Test
  void should_include_jdk_in_libraries_when_specified_modular() {
    settings.setProperty(ClasspathProperties.SONAR_JAVA_JDK_HOME, "src/test/jdk/jdk_modular");

    List<File> elements = createJavaClasspath().getElements();

