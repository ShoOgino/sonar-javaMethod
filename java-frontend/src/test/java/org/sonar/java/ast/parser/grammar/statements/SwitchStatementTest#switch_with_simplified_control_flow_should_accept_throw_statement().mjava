  @Test
  public void switch_with_simplified_control_flow_should_accept_throw_statement() {
    assertThat(JavaLexer.STATEMENT)
      // switch statement
      .matches("" +
        "switch (i) {" +
        "  case 1 -> print('A');" +
        "  case 2 -> throw new IllegalStateException(\"2\");" +
        "  default -> print('A');" +
        "}")
      // switch expression
      .matches("" +
        "r = switch (i) {" +
        "  case 1 -> 10;" +
        "  case 2 -> throw new IllegalStateException(\"2\");" +
        "  default -> throw new IllegalStateException(\"default\");" +
        "};");
  }

