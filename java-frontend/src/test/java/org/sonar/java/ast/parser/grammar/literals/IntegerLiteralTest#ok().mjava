  @Test
  public void ok() {
    // Decimal
    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("0")
      .matches("543");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("543l")
      .matches("543L");

    // Hexadecimal
    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("0xFF");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("0xFFl")
      .matches("0xFFL");

    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("0XFF");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("0XFFl")
      .matches("0XFFL");

    // Octal
    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("077");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("077l")
      .matches("077L");

    // Binary (new in Java 7)
    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("0b1010");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("0b1010l")
      .matches("0b1010L");

    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("0B1010");
    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("0B1010l")
      .matches("0B1010L");

    // Underscore (new in Java 7)
    assertThat(JavaTokenType.INTEGER_LITERAL)
      .matches("1_000_000")
      .matches("5_______2");

    assertThat(JavaTokenType.LONG_LITERAL)
      .matches("0x7fff_ffff_ffff_ffffL");
  }

