  @Test
  void quotedStringWithComments() {
    assertPlainString("a#b", "\\\\Qa#b\\\\E", true);
    assertPlainString("ab", "ab#\\\\Qc\\\\E", true);
    assertPlainString("ab", "\\\\Qab\\\\E#\\\\Qb\\\\E", true);
    assertPlainString("", "\\\\Q\\\\E#lala", true);
    assertPlainString("a b", "\\\\Qa b\\\\E", true);
    assertPlainString("ab", "\\\\Qa\\\\E \\\\Qb\\\\E", true);
  }

